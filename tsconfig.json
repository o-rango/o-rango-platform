{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": false,
      "noImplicitAny": false,
      "noUnusedLocals": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2015",
      "sourceMap": true,
      "allowJs": true,
      "outDir": "dist"
    },
    "include": [
      "packages/**/*",
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }